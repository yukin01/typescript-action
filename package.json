{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "bundle": "ncc build",
    "test": "jest",
    "all": "yarn format && yarn lint && yarn test && yarn build && yarn bundle"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "YourNameOrOrganization",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.8",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.22.0",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^3.4.1",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.2.6",
    "jest-circus": "^25.2.6",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.2",
    "ts-jest": "^25.3.0",
    "typescript": "^3.6.4"
  }
}
